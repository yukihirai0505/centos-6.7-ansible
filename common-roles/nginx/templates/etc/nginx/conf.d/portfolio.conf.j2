server {
    listen               80;
    keepalive_timeout    70;
    server_name  portfolio.yukihirai0505.com;

    root  /var/www/html/;

    #access_log  /var/log/nginx/log/host.access.log  main;
    # ログファイル名を設定します。
    access_log   /var/log/nginx/portfolio.yukihirai0505.com/access.log main;
    error_log    /var/log/nginx/portfolio.yukihirai0505.com/error.log  warn;

    # robots.txt へのアクセスはログへの記録オフ
    location = /robots.txt  {
        access_log off;
        log_not_found off;
    }
    # favicon へのアクセスはログへの記録オフ
    location = /favicon.ico {
        empty_gif;
        access_log off;
        log_not_found off;
    }

    location / {
        proxy_pass http://portfolio;
    }

    # ドット始まりのファイルはアクセスできないように
    location ~ /\. {
        deny all;
        log_not_found off;
        access_log off;
    }

}